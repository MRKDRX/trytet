print("Solo con las respuestas correctas verás el mensaje oculto...")
def tete():
    nombre = input("¿Cuál es tu nombre completo? ")
    edad = input("¿Cuántos años tienes? ")
    fiesta = input("¿Cuál era nuestra discoteca por excelencia? ")
    mote = input("¿Cómo te suelo llamar? ")
    if nombre == 'Maria del Pilar Piñeiro Pereda' or "María del Pilar Piñeiro Pereda" and edad == "26" and fiesta == "Funky Buddha" and mote == "Tete":
        print("Feliz cumple, Pili, te deseo lo mejor, hoy y siempre, with love, Markus ")
        print('\n'.join(' '.join(*zip(*row)) for row in ([
            ["*" if row == 0 and col % 3 != 0 or row == 1 and col % 3 == 0 or row - col == 2 or row + col == 8 else " "
             for
             col in range(7)] for row in range(6)])))
    else:
        print(" ")
        print("¡No has escogido las respuestas correctas!")
        print(" ")
        print("Inténtalo de nuevo: ")
        tete()
tete()
